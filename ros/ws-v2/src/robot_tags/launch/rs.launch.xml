<launch>

    <arg name="rviz_config" default="vf.rviz"/>

    <include file="$(find-pkg-share realsense2_camera)/launch/rs_launch.py"/>

    <include file="$(find-pkg-share image_proc)/launch/image_proc.launch.py"/>

    <node pkg="apriltag_ros" exec="apriltag_node" >
        <param from="$(find-pkg-share robot_tags)/tags.yaml"/>
        <remap from="/image_rect/compressed" to="/camera/camera/color/image_raw/compressed"/>
        <remap from="/camera_info" to="/camera/camera/color/camera_info"/>
    </node>

    <node pkg="rviz2" exec="rviz2" args="-d $(find-pkg-share robot_tags)/vf.rviz" />

    <node pkg="robot_tags" exec="move_robot" name="move_robot" />

    <node pkg="tf2_ros" exec="static_transform_publisher" name="static_transform_publisher_WB" args="0 -0.0775 0 0 0 0 base_tag world" />

</launch>